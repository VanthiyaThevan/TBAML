# Environment Variables Template
# Copy this file to .env and fill in your actual values
# 
# To get API keys:
# - OpenAI: https://platform.openai.com/api-keys
# - Anthropic: https://console.anthropic.com/settings/keys
#
# IMPORTANT: Never commit the .env file to version control!

# API Keys (Required for AI/ML features)
# These keys are sourced from: /Users/prabhugovindan/working/vscode/langchain/config.py

# Get your OpenAI API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=<your key>

# Get your Anthropic API key from: https://console.anthropic.com/settings/keys  
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Hugging Face Hub API Token (for transformers/models)
HUGGINGFACEHUB_API_TOKEN=<your token>

# Jina Chat API Key
JINACHAT_API_KEY=<your key>

# LangSmith API Key (for LLM observability/tracing)
LANGSMITH_API_KEY=<your key>
LANGSMITH_TRACING_V2=true
LANGSMITH_ENDPOINT=https://api.smith.langchain.com
LANGSMITH_PROJECT=pr-scholarly-pharmacopoeia-80

# Tavily API Key (for web search/research)
TAVILY_API_KEY= <your key>

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/tbaml_db
# For development, use SQLite:
# DATABASE_URL=sqlite:///./tbaml_dev.db

# Application Settings
ENVIRONMENT=development
DEBUG=True
LOG_LEVEL=INFO

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=True

# Security
SECRET_KEY=your_secret_key_here
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60

# Data Collection Settings
SCRAPING_RATE_LIMIT=10
REQUEST_TIMEOUT=30
USER_AGENT=Mozilla/5.0 (TBAML-System/1.0)

# LLM Settings
LLM_MODEL=gpt-4-turbo-preview
LLM_TEMPERATURE=0.3
LLM_MAX_TOKENS=2000

# Privacy & Compliance
DATA_RETENTION_DAYS=90
ENABLE_AUDIT_LOGGING=True

